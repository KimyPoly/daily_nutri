<div class="dashboard-header">
  <h1>Welcome <%= @user.first_name %> <%= @user.last_name %>!</h1>
  <p>All your programs (<%= @programs.count %>): </p>
</div>

<div class="program-card-container">
  <% @programs.each do |program| %>
    <div class="program-card">
      <%= render partial: 'pages/goal_image', locals: { goal: program.goal } %>
      <div class="program-card-info">
        <p><strong>Goal:</strong> <%= program.goal.capitalize %></p>
        <p><strong>Calories:</strong> <%= program.total_calories %></p>
        <p><strong>Number of days:</strong> <%= program.nb_of_days %></p>
        <%= link_to "More info", program_path(program), class: "btn-home" %>
      </div>
    </div>
  <% end %>
</div>

<%= simple_form_for '', url: dashboard_path, method: :get do |f|%>
  <%= f.input :options, placeholder: "Give me only ingredients", label: "Your ingredients"  %>
  <%= f.submit :submit, class: "btn-home" %>
<% end %>

<% if @response_from_content_method.present? %>
  <h3>Bot Answer:</h3>
  <%= @response_from_content_method %>
<% end %>
