
<div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @meal.photo_url%>)'>
  <h1><%= @meal.name %></h1>
</div>
<div class="container">
  <div class="info_recipe">
    <h4><%= @meal.calories %>Kcal</h4>
    <h4> <%= @meal.time %> min</h4>
    <h4> <%= @meal.price %> $</h4>
  </div>
 <ul class="ingredients-list">
 <h2>Ingredients</h2>
  <% @meal.ingredients.split(',').each do |ingredient| %>
    <li><span>ğŸ¤</span> <%= ingredient.strip.capitalize%></li>
  <% end %>
</ul>
</div>

 <div data-controller="toggle">
    <button data-action="click->toggle#action" class="btn-home-main">Recipe</button>
    <div class="d-none" data-toggle-target="form">
    <ol class="recipe-steps">
      <% @meal.recipe.split('.,').each_with_index do |recipe_step, index| %>
        <li class="recipe-ecart"> <%= recipe_step.strip %></li>
      <% end %>
    </ol>
  </div>
</div>

