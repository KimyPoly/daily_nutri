<div class="container">
  <h1 class="title">All The Meals</h1>

  <%= form_tag(process_meals_program_meals_path, method: :post) do %>
    <div class="cards-container" data-controller='checked'>
      <% @meals.each do |meal| %>
        <div class="card">
          <img src="<%= meal.photo_url %>" alt="">
          <h1 class="taille"><strong><%= meal.name %></strong></h1>
          <h4 class="meal-calories">🏋️ <%= meal.calories %> Kcal</h4>
          <input type="checkbox" id="selected_meals_<%= meal.id %>" name="selected_meals[]" value="<%= meal.id %>" class="hidden-checkbox">
          <label for="selected_meals_<%= meal.id %>" class="custom-checkbox"></label>
        </div>
      <% end %>
    </div>

    <%= submit_tag "Enregistrer mes sélections", class: "btn-home" %>
  <% end %>
</div>
