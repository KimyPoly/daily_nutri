<div class="big-style">
  <%= simple_form_for(@program) do |f| %>
    <h2>What is your goal ? </h2>
    <%= f.input :goal, collection: Program::GOAL, as: :check_boxes, label_method: :to_s, item_wrapper_class: 'btn-home custom-checkbox'  %>
    <h2>What is your diet ? </h2>
    <%= f.input :diet, collection: Program::DIET, as: :check_boxes, label_method: :to_s, item_wrapper_class: 'btn-home custom-checkbox' %>
    <div class="question">
      <h2>Do you have any allergies ? </h2>
      <%= f.input :allergies, collection: Program::ALLERGIES, as: :check_boxes, label_method: :to_s, item_wrapper_class: 'btn-home custom-checkbox', input_html: { multiple: true } %>
    </div>
    <h2> How many meals a day ? </h2>
    <%= f.input :nb_of_meals_by_day, collection: [2, 3, 4], as: :check_boxes, label_method: :to_s, item_wrapper_class: 'btn-home custom-checkbox '%>
    <h2> For how many days? </h2>
    <%= f.input :nb_of_days, collection: (2..7).to_a, as: :check_boxes, label_method: :to_s, item_wrapper_class: 'btn-home custom-checkbox'%>
    <h2> Any snacks ? </h2>
    <%= f.input :nb_of_snacks, collection: (0..3).to_a, as: :check_boxes, label_method: :to_s, item_wrapper_class: 'btn-home custom-checkbox'%>
    <h2> Height ? </h2>
    <%= f.input :height %>
    <h2> Weight ? </h2>
    <%= f.input :weight %>
    <%= f.button :submit, "Create program", class:"btn-submit" %>
  <% end %>

</div>

</div>
