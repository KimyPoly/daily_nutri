<div class="container">
  <h1>All The Meals</h1>

  <%= form_tag(process_meals_program_meals_path, method: :post) do %>
    <div class="cards-container">
      <% @meals.each do |meal| %>
        <div class="card">
          <%= check_box_tag "selected_meals[]", meal.id %>
          <%= meal.name %>
        </div>
      <% end %>
    </div>

    <%= submit_tag "Enregistrer mes sÃ©lections", class: "btn-home" %>
  <% end %>
</div>
