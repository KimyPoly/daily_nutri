
<h2 class="sign_up_form">Sign up</h2>

<div class="sign_up_form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <div class="sign_up_display">
        <%= f.input :first_name,
                    required: true,
                    label_html: { class: 'sign_up_form' },
                    input_html: { autocomplete: "first_name", placeholder: "First name" }%>
        <%= f.input :last_name,
                    required: true,
                    label_html: { class: 'sign_up_form' },
                    input_html: { autocomplete: "last_name", placeholder: "Last name" }%>
      </div>
      <%= f.input :age,
                  required: true,
                  label_html: { class: 'sign_up_form' },
                  input_html: { autocomplete: "last_name", placeholder: "Age" }%>
      <%= f.input :profile_picture,
                  label_html: { class: 'sign_up_form' },
                  input_html: { class: 'sign_up_form' },
                  as: :file%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label_html: { class: 'sign_up_form' },
                  input_html: { autocomplete: "email", placeholder: "Email" }%>
      <%= f.input :password,
                  required: true,
                  label_html: { class: 'sign_up_form' },
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder: "Password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label_html: { class: 'sign_up_form' },
                  input_html: { autocomplete: "new-password", placeholder: "Password confirmation" } %>
      <div class="sign_up_form_btn">
        <%= f.button :submit, "Sign up", class: 'btn-home-main' %>
      </div>
  <% end %>
</div>
