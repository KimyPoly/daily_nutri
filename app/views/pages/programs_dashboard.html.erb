<div class="container">
  <h1>Welcome to your dashboard ! <%= @user %></h1>

  <h2>All your programs (<%= @programs.count %>): </h2>

  <div class="program-card-container">
    <% @programs.each do |program| %>
      <div class="program-card">
        <%= render partial: 'pages/goal_image', locals: { goal: program.goal } %>
        <div class="program-card-info">
          <p>Goal: <%= program.goal.capitalize %></p>
          <p>Diet: <%= program.diet %></p>
          <p>Number of days: <%= program.nb_of_days %></p>
        </div>
      </div>
    <% end %>
    <div data-controller="toggle">
      <button data-action="click->toggle#action" class="btn-home">Create a new program</button>
      <div class="display-none" data-toggle-target="form">
        <%= render partial: 'shared/form_new', locals: { program: @program } %>
      </div>
    </div>
  </div>
</div>
